<?xml version="1.0" encoding="utf-8"?>
<component name="LoginScene" extends="Group">
  <script type="text/brightscript" uri="pkg:/components/LoginScene.brs" />

  <interface>
    <field id="loginSuccess" type="boolean" value="false" alwaysNotify="true" />
    <field id="authToken" type="string" value="" alwaysNotify="true" />
  </interface>

  <children>
    <EmberTheme id="theme" />
    <LoginTask id="loginTask" />

    <Rectangle id="bg" width="1920" height="1080" color="#0B0B0F" />
    
    <Timer id="focusTimer" duration="0.10" repeat="false" />

    <Group id="card" translation="[540,170]">
      <Rectangle id="cardBg" width="840" height="740" color="#141420" />
      <Rectangle id="cardStroke" width="840" height="740" color="#2A2A3A" />

      <Poster id="logo" translation="[110, 40]" width="620" height="150"
              loadDisplayMode="scaleToFit" 
              uri="pkg:/images/logo/logo_fhd.png" />

      <Label id="title" translation="[80,190]" width="680" height="70" text="Sign in" />
      <Label id="subtitle" translation="[80,255]" width="680" height="70"
             text="Log into your EmberTV account." wrap="true" numLines="2" />

      <Label id="emailLabel" translation="[80,320]" width="680" height="34" text="Email" />
      <Group id="emailField" translation="[80,360]">
        <Rectangle id="emailBg" width="680" height="72" color="#1B1B2A" />
        <Rectangle id="emailRingTop"    translation="[-4,-4]" width="688" height="4" color="#EF6418" visible="false" />
        <Rectangle id="emailRingBottom" translation="[-4,72]" width="688" height="4" color="#EF6418" visible="false" />
        <Rectangle id="emailRingLeft"   translation="[-4,-4]" width="4"   height="80" color="#EF6418" visible="false" />
        <Rectangle id="emailRingRight"  translation="[680,-4]" width="4"  height="80" color="#EF6418" visible="false" />
        <Label id="emailValue" translation="[16,16]" width="648" height="40" text="you@example.com" />
      </Group>

      <Label id="passLabel" translation="[80,455]" width="680" height="34" text="Password" />
      <Group id="passField" translation="[80,495]">
        <Rectangle id="passBg" width="680" height="72" color="#1B1B2A" />
        <Rectangle id="passRingTop"    translation="[-4,-4]" width="688" height="4" color="#EF6418" visible="false" />
        <Rectangle id="passRingBottom" translation="[-4,72]" width="688" height="4" color="#EF6418" visible="false" />
        <Rectangle id="passRingLeft"   translation="[-4,-4]" width="4"   height="80" color="#EF6418" visible="false" />
        <Rectangle id="passRingRight"  translation="[680,-4]" width="4"  height="80" color="#EF6418" visible="false" />
        <Label id="passValue" translation="[16,16]" width="648" height="40" text="••••••••" />
      </Group>

      <Label id="errorLabel" translation="[80,585]" width="680" height="60" visible="false" />

      <Group id="signInBtn" translation="[160,645]">
        <Rectangle id="btnBg" width="520" height="76" color="#EF6418" opacity="0.92" />
        <Label id="btnText" translation="[0,18]" width="520" height="40" horizAlign="center" text="Sign In" />
      </Group>
    </Group>
  </children>
</component>